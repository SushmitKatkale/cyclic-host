<div class="flex flex-col mb-2 border-b border-gray-400 py-1">
    <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
            <div class="w-10 aspect-square rounded-full bg-red-600 mr-2">

            </div>
            <div>
                <h1><%= comment.commentUser.userName %></h1>
                <h1 class="text-xs"><%= comment.commentDate %></h1>
            </div>
        </div>
        <div>
            <% if (user._id.toString() == comment.commentUser._id.toString()) { %>
                <a href="/milo/delete-comment/?cid=<%= comment._id %>&pid=<%= post._id %>">delete</a>
            <% } %>
        </div>
    </div>
    <div class="px-5 mt-2">
        <p class="w-full ">
            <%= comment.commentContent %>
        </p>
    </div>

</div>